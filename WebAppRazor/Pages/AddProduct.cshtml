@page
@model AddProductModel
@{
    ViewData["Title"] = "AddProduct";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form class="row g-3 needs-validation" novalidate method="post">
        <div class="form-group">
            <label for="validationCustom01" asp-for="ProductToAdd.Name" class="form-label">Name</label>
            <input type="text" id="validationCustom01" value="Mark" required asp-for="ProductToAdd.Name" class="form-control">
            <span asp-validation-for="ProductToAdd.Name" class="text-danger"></span>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProductToAdd.Price" class="control-label">Price</label>
            <input asp-for="ProductToAdd.Price" class="form-control">
            <span asp-validation-for="ProductToAdd.Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductToAdd.Details" class="control-label">Details</label>
            <input asp-for="ProductToAdd.Details" class="form-control">
            <span asp-validation-for="ProductToAdd.Details" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductToAdd.Amount" class="control-label">Amount</label>
            <input asp-for="ProductToAdd.Amount" class="form-control">
            <span asp-validation-for="ProductToAdd.Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="category">Category</label>
            <select class="form-control" asp-for="ProductToAdd.Category">
                <option value="@Model.Categories[0]">Select Categories</option>
                @foreach(string cat in Model.Categories){
                    <option value="@cat">@cat</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="picture">Picture</label>
            <select class="form-control" asp-for="ProductToAdd.Image">
                <option value="@Model.Pictures[0]">Select Picture</option>
                @foreach(string pict in Model.Pictures){
                    <option value="@pict">@pict</option>
                }
            </select>
        </div>
        <br>
        <br>
        <div class="form-group">
            <label asp-for="Psw">Password</label>
            <input asp-for="Psw" class="form-control" placeholder="Insert Password">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
    @section Scripts {
        <partial name="_ValidationScriptsPartial"/>
    }
</div>